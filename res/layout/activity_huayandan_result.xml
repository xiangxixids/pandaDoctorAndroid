<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/huayandan_result"
    tools:context="${relativePackage}.${activityClass}" >
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/title"
                    android:gravity="center_vertical"
                    android:id="@+id/rel"
            >
        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/back"
                   android:padding="10dp"
                   android:id="@+id/back"
                />
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="化验单结果"
                  android:layout_centerHorizontal="true"
                  android:textColor="@color/white"
                  android:gravity="center_vertical"
                  android:textSize="20dp"
                  android:id="@+id/title"
                />

    </RelativeLayout>

    <TextView
        android:id="@+id/huayandan_result_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />

    <WebView
        android:id="@+id/huayandan_result_webView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/huayandan_ask_chunyu"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/huayandan_result_imageView" />

    <ProgressBar
        android:id="@+id/huayandan_result_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/huayandan_ask_chunyu"
        android:layout_width="285dp"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:background="@color/freetitle"
        android:gravity="center"
        android:text="保存为病历"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/huayandan_result_imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/huayandan_ask_chunyu"
        android:layout_below="@+id/rel"
        android:src="@drawable/save_bg" />

    <TextView
        android:id="@+id/huayandan_result_textView_title"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_above="@+id/huayandan_result_webView"
        android:layout_alignRight="@+id/huayandan_ask_chunyu"
        android:layout_toRightOf="@+id/huayandan_result_imageView"
        android:layout_marginLeft="14dp"
        android:textSize="15sp"
        android:gravity="center_vertical"
        android:text="TextView" />

</RelativeLayout>